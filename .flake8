[flake8]
max-line-length = 300
extend-ignore = E203, W503, E722, F401, W291, F841, E402, E731, F541
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    htmlcov,
    venv,
    .venv,
    *.egg-info,
    build,
    dist,
    node_modules,
    graph_builder/node_modules,
    graph_builder/dist,
    src/auto_coder/mcp_servers,
    src/auto_coder/graph_builder
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811,F841

