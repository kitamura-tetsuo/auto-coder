# Minimal Label-Based Prompt Configuration
# Copy this file to .env and customize as needed

# Basic label prompt mappings (JSON format)
# These map GitHub labels to prompt template keys
AUTO_CODER_LABEL_PROMPT_MAPPINGS='{
  "bug": "issue.bug",
  "enhancement": "issue.enhancement",
  "urgent": "issue.urgent",
  "breaking-change": "issue.breaking_change",
  "documentation": "issue.documentation"
}'

# Label priorities (JSON array, highest priority first)
# When an issue has multiple labels, the highest priority one is used
AUTO_CODER_LABEL_PRIORITIES='[
  "breaking-change",
  "urgent",
  "bug",
  "enhancement",
  "documentation"
]'

# PR label mappings (JSON format)
# These define which labels belong to each semantic category
AUTO_CODER_PR_LABEL_MAPPINGS='{
  "breaking-change": ["breaking-change"],
  "urgent": ["urgent"],
  "bug": ["bug"],
  "enhancement": ["enhancement"],
  "documentation": ["documentation"]
}'

# PR label priorities (JSON array)
AUTO_CODER_PR_LABEL_PRIORITIES='[
  "urgent",
  "breaking-change",
  "bug",
  "enhancement",
  "documentation"
]'

# Enable automatic label copying from issues to PRs (true/false)
AUTO_CODER_PR_LABEL_COPYING_ENABLED='true'

# Maximum number of labels to copy to PRs (0-10)
AUTO_CODER_PR_MAX_LABELS='3'
