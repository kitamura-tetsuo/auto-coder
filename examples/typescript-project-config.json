{
  "description": "Label configuration for TypeScript/JavaScript projects",
  "version": "1.0.0",
  "project_type": "TypeScript/JavaScript",

  "label_prompt_mappings": {
    "type:bug": "issue.bug",
    "type:defect": "issue.bug",
    "type:error": "issue.bug",
    "bug": "issue.bug",

    "type:feature": "issue.enhancement",
    "type:enhancement": "issue.enhancement",
    "feature": "issue.enhancement",
    "enhancement": "issue.enhancement",

    "priority:urgent": "issue.urgent",
    "priority:high": "issue.urgent",
    "urgent": "issue.urgent",

    "scope:breaking": "issue.breaking_change",
    "breaking-change": "issue.breaking_change",

    "type:docs": "issue.documentation",
    "docs": "issue.documentation",
    "documentation": "issue.documentation",

    "type:refactor": "issue.refactor",
    "refactor": "issue.refactor",

    "perf": "issue.optimization",
    "performance": "issue.optimization",
    "optimization": "issue.optimization"
  },

  "label_priorities": [
    "scope:breaking",
    "breaking-change",

    "priority:urgent",
    "priority:high",
    "urgent",

    "type:bug",
    "type:defect",
    "bug",

    "type:feature",
    "type:enhancement",
    "feature",
    "enhancement",

    "type:refactor",
    "refactor",

    "perf",
    "performance",
    "optimization",

    "type:docs",
    "docs",
    "documentation"
  ],

  "pr_label_mappings": {
    "breaking": ["scope:breaking", "breaking-change"],
    "urgent": ["priority:urgent", "priority:high", "urgent"],
    "bug": ["type:bug", "type:defect", "bug"],
    "feature": ["type:feature", "type:enhancement", "feature"],
    "refactor": ["type:refactor", "refactor"],
    "optimization": ["perf", "performance", "optimization"],
    "docs": ["type:docs", "docs", "documentation"]
  },

  "pr_label_priorities": [
    "urgent",
    "breaking",
    "bug",
    "feature",
    "refactor",
    "optimization",
    "docs"
  ],

  "pr_label_copying": {
    "enabled": true,
    "max_labels": 3
  }
}
